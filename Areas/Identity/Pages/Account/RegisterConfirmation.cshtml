@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Potwierdzenie rejestracji";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
        <p>
            To jest tryb deweloperski (brak skonfigurowanego wysyłania e-maili).
            <br />
            W normalnych warunkach ten link zostałby wysłany na maila: 
            <a id="confirm-link" href="@Model.EmailConfirmationUrl">Kliknij tutaj, aby potwierdzić konto</a>
        </p>
    }
    else
    {
        <p>
            Sprawdź swoją skrzynkę e-mail, aby potwierdzić konto.
        </p>
    }
}