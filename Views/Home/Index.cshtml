<style>
    body {
        background-color: #050505; 
        color: #e0e0e0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .hero-section {
        position: relative;
        height: 85vh; 
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.8)), url('/images/scena-tlo.jpg'); 
        background-size: cover;
        background-position: center;
        border-bottom: 3px solid #ffc107; 
        overflow: hidden;
    }

    .hero-title {
        font-size: 4.5rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 6px;
        margin-bottom: 1rem;
        color: #ffffff;
        text-shadow: 2px 2px 10px rgba(0,0,0,0.8);
        animation: fadeInDown 1s ease-out;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        font-weight: 300;
        color: #ffc107;
        margin-bottom: 2.5rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        animation: fadeInUp 1s ease-out;
    }

    .btn-eventer {
        padding: 15px 50px;
        font-size: 1.1rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: #000;
        background-color: #ffc107;
        border: none;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        border-radius: 2px;
    }

    .btn-eventer:hover {
        background-color: #fff;
        color: #000;
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.3);
        cursor: pointer;
    }

    .about-section {
        padding: 100px 20px;
        background-color: #0a0a0a;
        text-align: center;
    }

    .section-header {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 50px;
        position: relative;
        display: inline-block;
        color: #fff;
        text-transform: uppercase;
    }

    .section-header::after {
        content: '';
        display: block;
        width: 80px;
        height: 4px;
        background-color: #ffc107;
        margin: 20px auto 0;
    }

    .about-text {
        max-width: 800px;
        margin: 0 auto;
        font-size: 1.15rem;
        line-height: 1.9;
        color: #b0b0b0;
    }

    .services-section {
        padding: 80px 20px;
        background-color: #000;
    }

    .service-card {
        background-color: #111;
        border: 1px solid #222;
        padding: 50px 30px;
        text-align: center;
        transition: all 0.4s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .service-card:hover {
        transform: translateY(-10px);
        border-color: #ffc107;
        box-shadow: 0 10px 30px rgba(255, 193, 7, 0.1);
    }

    .service-icon {
        font-size: 3.5rem;
        color: #ffc107;
        margin-bottom: 25px;
    }

    .service-title {
        font-size: 1.6rem;
        font-weight: 600;
        margin-bottom: 15px;
        color: #fff;
    }

    .service-desc {
        color: #888;
        margin-bottom: 30px;
    }

    .btn-outline-eventer {
        border: 2px solid #ffc107;
        color: #ffc107;
        padding: 10px 25px;
        text-decoration: none;
        font-weight: 600;
        transition: 0.3s;
        display: inline-block;
        background: transparent;
    }

    .btn-outline-eventer:hover {
        background-color: #ffc107;
        color: #000;
    }

    .carousel-section {
        background-color: #050505;
        padding-bottom: 0;
    }

    .carousel-item {
        height: 600px;
    }

    .carousel-item img {
        height: 100%;
        width: 100%;
        object-fit: cover;
        filter: brightness(0.7);
    }

    .carousel-caption {
        background: rgba(0,0,0,0.7);
        padding: 20px;
        border-left: 5px solid #ffc107;
        bottom: 50px;
        text-align: left;
    }

    .carousel-caption h5 {
        font-size: 2rem;
        font-weight: 700;
        color: #ffc107;
    }

    .stats-section {
        background: #111;
        padding: 80px 0;
        color: #fff;
        border-top: 1px solid #222;
    }

    .stat-box {
        text-align: center;
        padding: 20px;
    }

    .stat-number {
        font-size: 4rem;
        font-weight: 800;
        color: #ffc107;
        margin-bottom: 10px;
        display: block;
    }

    .stat-label {
        font-size: 1.2rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        color: #ccc;
    }

    @@keyframes fadeInDown {
        from { opacity: 0; transform: translateY(-50px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(50px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

