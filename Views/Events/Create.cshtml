            </form>
        </div>
        
        <div class="sidebar-footer">
            <button type="button" id="btnSave" class="btn-primary-custom"><i class="bi bi-floppy2-fill"></i> Zapisz Projekt</button>
        </div>
        
        <div class="status-bar-custom">
            <div class="status-item"><div id="statusDot" class="status-dot busy"></div> <span id="statusText" style="margin-left:8px">Ładowanie...</span></div>
            <div class="status-item"><span>v5.0 Stable</span></div>
        </div>
    </aside>

    <main class="viewport-container">
        <div class="viz-window">
            <div class="viewport-toolbar">
                <div class="tool-btn" onclick="resetCamera()" title="Reset Kamery"><i class="bi bi-arrows-move"></i></div>
                <div class="tool-btn" onclick="toggleGrid()" title="Siatka"><i class="bi bi-grid-3x3"></i></div>
            </div>
            
            <div id="vizContainer"></div>
            
            <div class="overlay-debug"><span id="debugInfo">Init...</span></div>
        </div>
    </main>
</div>

<script type="module">
    import { initApp, updateSceneData, getScreenshot, resetCamera, toggleGrid } from '/js/3d/main.js?v=@DateTime.Now.Ticks';
    
    // Eksport do okna dla przycisków HTML
    window.resetCamera = resetCamera;
    window.toggleGrid = toggleGrid;

    let debounceTimer;
    
    // Dane z modelu (przywracanie przy edycji)
    const savedStageWidth = @(Model.StageWidth > 0 ? Model.StageWidth.ToString(System.Globalization.CultureInfo.InvariantCulture) : "10.35");
    const savedStageDepth = @(Model.StageDepth > 0 ? Model.StageDepth.ToString(System.Globalization.CultureInfo.InvariantCulture) : "8.28");

    window.toggleSection = function(el) {
        el.parentElement.classList.toggle('collapsed');
    }
    
    function debounce(func, timeout = 100) {
        return (...args) => {
            clearTimeout(debounceTimer);
            debounceTimer = setTimeout(() => { func.apply(this, args); }, timeout);
        };
    }

    // --- OBSŁUGA ZAPISU (POPRAWIONA) ---
    document.getElementById('btnSave').addEventListener('click', async () => {
        const btn = document.getElementById('btnSave');
        const form = document.getElementById('configForm');

        if (!form.checkValidity()) {
            form.reportValidity();
            return;
        }

        btn.innerHTML = '<i class="bi bi-hourglass-split"></i> Zapisywanie...';
        btn.disabled = true;

        try {
            const imgData = getScreenshot();
            const imgInput = document.getElementById('imageUrlInput');
            
            // Bezpieczne wstawianie obrazu (nie rzuca błędem jeśli pole jest nullem)
            if (imgInput) {
                imgInput.value = imgData || "";
            }
            
            form.submit();
        } catch (e) {
            console.error("Save Error", e);
            alert("Błąd podczas zapisywania: " + e.message);
            btn.innerHTML = '<i class="bi bi-floppy2-fill"></i> Zapisz Projekt';
            btn.disabled = false;
        }
    });

    // --- LOGIKA FORMULARZA ---
    function updateStageOptions(mode, maxModules = 15, forceW = null, forceD = null) {
        const wSel = document.getElementById('stageWidth');
        const dSel = document.getElementById('stageDepth');
        
        const currentW = parseFloat(wSel.value);
        const currentD = parseFloat(dSel.value);

        let opts = "";
        if (mode === 'layher_roof') {
            opts += `<option value="2.07">2.07m</option>`;
            opts += `<option value="4.14">4.14m</option>`;
            opts += `<option value="6.21">6.21m</option>`;
        } else {
            opts += `<option value="1.04">1.04m</option>`;
            for(let i=1; i<=maxModules; i++) {
                let valFull = (i * 2.07).toFixed(2);
                opts += `<option value="${valFull}">${valFull}m</option>`;
                if (i < maxModules) {
                    let valHalf = (i * 2.07 + 1.04).toFixed(2);
                    opts += `<option value="${valHalf}">${valHalf}m</option>`;
                }
            }
        }

        wSel.innerHTML = opts;
        dSel.innerHTML = opts;

        const setSelectValue = (sel, val) => {
            let found = false;
            for(let i=0; i<sel.options.length; i++) {
                if (Math.abs(parseFloat(sel.options[i].value) - val) < 0.05) {
                    sel.selectedIndex = i;
                    found = true;
                    break;
                }
            }
            if (!found) {
                if (val > parseFloat(sel.options[sel.options.length-1].value)) sel.selectedIndex = sel.options.length - 1;
                else for(let i=0; i<sel.options.length; i++) {
                    if (parseFloat(sel.options[i].value) >= val) {
                        sel.selectedIndex = i;
                        break;
                    }
                }
            }
        };

        const finalW = (forceW !== null) ? forceW : (isNaN(currentW) ? 10.35 : currentW);
        const finalD = (forceD !== null) ? forceD : (isNaN(currentD) ? 8.28 : currentD);

        setSelectValue(wSel, finalW);
        setSelectValue(dSel, finalD);
    }

    function updateUI() {
        const type = document.getElementById('mainType').value;
        const hasRoof = document.getElementById('includeRoof').checked;
        const roofType = document.getElementById('roofType').value;
        const hasFoh = document.getElementById('includeFoh').checked;
        const hasFohTower = document.getElementById('fohTower').checked;
        const catwalk = document.getElementById('catwalkType').value;
        const risers = document.getElementById('riserCount').value;

        const isStage = (type === 'stageWithRoof' || type === 'stageNoRoof');
        document.getElementById('sectionRoof').classList.toggle('hidden', !isStage);
        document.getElementById('sectionFoh').classList.toggle('hidden', !isStage);
        document.getElementById('sectionExtras').classList.toggle('hidden', !isStage);

        if(type === 'stageNoRoof') {
            document.getElementById('includeRoof').checked = false;
            document.getElementById('includeRoof').disabled = true;
            document.getElementById('roofOptions').classList.add('hidden');
        } else if (type === 'stageWithRoof') {
             document.getElementById('includeRoof').disabled = false;
        }

        const stageHeightSlider = document.getElementById('stageHeight');
        stageHeightSlider.min = 1.0; 
        let maxStageHeight = 2.5; 
        if (type === 'stageNoRoof') maxStageHeight = 10.0;
        else if (hasRoof) {
            if (roofType === 'layher') maxStageHeight = 10.0;
            else maxStageHeight = 2.5;
        }
        stageHeightSlider.max = maxStageHeight;
        if (parseFloat(stageHeightSlider.value) > maxStageHeight) stageHeightSlider.value = maxStageHeight;
        if (parseFloat(stageHeightSlider.value) < 1.0) stageHeightSlider.value = 1.0;

        const showRoofOpts = (type === 'stageWithRoof' && hasRoof);
        document.getElementById('roofOptions').classList.toggle('hidden', !showRoofOpts);
        
        if(showRoofOpts) {
            document.getElementById('prolyteOptions').classList.toggle('hidden', roofType !== 'prolyte');
            document.getElementById('layherOptions').classList.toggle('hidden', roofType !== 'layher');
            
            if (roofType === 'layher') {
                updateStageOptions('layher_roof');
            } else if (roofType === 'prolyte') {
                const pVariant = document.getElementById('prolyteVariant').value;
                if (pVariant === 'frame') updateStageOptions('standard', 7);
                else updateStageOptions('standard', 15);
            }
        } else {
            updateStageOptions('standard', 15);
        }

        document.getElementById('fohOptions').classList.toggle('hidden', !hasFoh);
        document.getElementById('towerOptions').classList.toggle('hidden', !hasFohTower);

        const fohW = parseFloat(document.getElementById('fohWidth').value);
        const towerHeightSlider = document.getElementById('towerHeight');
        let maxTowerHeight = 10.0;
        if (fohW >= 6.0) maxTowerHeight = 20.0;
        else if (fohW >= 4.0) maxTowerHeight = 16.0;
        else maxTowerHeight = 10.0;
        towerHeightSlider.max = maxTowerHeight;
        if (parseFloat(towerHeightSlider.value) > maxTowerHeight) towerHeightSlider.value = maxTowerHeight;

        document.getElementById('catwalkOptions').classList.toggle('hidden', catwalk === 'none');
        document.getElementById('riserOptions').classList.toggle('hidden', risers === '0');

        ['stageHeight', 'roofClearance', 'fohDist', 'towerHeight'].forEach(id => {
            const el = document.getElementById(id);
            if(el) document.getElementById(id + '_val').innerText = el.value + 'm';
        });
    }

    function update3D() {
        updateUI();
        const formData = new FormData(document.getElementById('configForm'));
        const data = Object.fromEntries(formData.entries());
        
        data.includeRoof = document.getElementById('includeRoof').checked;
        data.includeFoh = document.getElementById('includeFoh').checked;
        data.showMausery = document.getElementById('showMausery').checked;
        data.addBallast = document.getElementById('addBallast').checked;
        data.fohTower = document.getElementById('fohTower').checked;
        data.prolyteScrim = document.getElementById('prolyteScrim').checked;
        data.layherScrim = document.getElementById('layherScrim').checked;
        
        document.getElementById('statusDot').className = 'status-dot busy';
        document.getElementById('debugInfo').innerText = `Update: ${new Date().toLocaleTimeString()}`;

        try {
            updateSceneData(data);
            document.getElementById('statusDot').className = 'status-dot ok';
            document.getElementById('statusText').innerText = 'Gotowy';
        } catch(e) {
            console.error(e);
            document.getElementById('statusText').innerText = 'Błąd renderowania';
        }
    }

    document.addEventListener("DOMContentLoaded", () => {
        updateStageOptions('standard', 15, savedStageWidth, savedStageDepth); 
        
        try {
            initApp('vizContainer');
            document.getElementById('statusText').innerText = 'Silnik 3D działa';
            document.getElementById('statusDot').className = 'status-dot ok';
        } catch(e) {
            console.error("Init Error", e);
            document.getElementById('statusText').innerText = 'Błąd inicjalizacji';
        }

        const inputs = document.querySelectorAll('input, select');
        inputs.forEach(el => {
            el.addEventListener('input', debounce(update3D, 50));
        });

        document.getElementById('roofType').addEventListener('change', () => { updateUI(); });
        document.getElementById('prolyteVariant').addEventListener('change', () => { updateUI(); });

        update3D();
    });
</script>