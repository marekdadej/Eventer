                                    <option value="6.21">6.21m</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Głębokość FOH</label>
                                <select asp-for="FohDepth" id="fohDepth" class="form-select">
                                    <option value="2.07">2.07m</option>
                                    <option value="4.14">4.14m</option>
                                    <option value="6.21">6.21m</option>
                                </select>
                            </div>
