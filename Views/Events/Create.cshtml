                                </select>
                            </div>
                            <div class="form-group">
                                <label>Wymiary Risera</label>
                                <div class="row-2">
                                    <div class="col">
                                        <select asp-for="RiserWidth" id="riserWidth" class="form-select">
                                            <option value="2.07">2.07 m</option>
                                            <option value="4.14">4.14 m</option>
                                        </select>
                                    </div>
