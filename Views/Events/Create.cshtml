    <aside class="sidebar">
        <div class="sidebar-scroll">
            <h4 style="color:white; margin-bottom:15px; font-weight:800;">KONFIGURATOR</h4>

            <form asp-action="@(Model.Id > 0 ? "Edit" : "Create")" method="post" id="configForm">
