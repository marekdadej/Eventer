@model Eventer.Models.Realizacja

@{
    ViewData["Title"] = "Dodaj nową realizację";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-success text-white py-3">
                    <h3 class="mb-0 h4"><i class="bi bi-plus-circle me-2"></i>Nowa Realizacja</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Nazwa" class="form-label fw-bold"></label>
                            <input asp-for="Nazwa" class="form-control" placeholder="Wpisz nazwę wydarzenia..." />
                            <span asp-validation-for="Nazwa" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Data" class="form-label fw-bold"></label>
                                <input asp-for="Data" class="form-control" type="date" />
                                <span asp-validation-for="Data" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="MiniaturkaFile" class="form-label fw-bold"></label>
                                <input asp-for="MiniaturkaFile" type="file" class="form-control" accept="image/*" />
                                <span asp-validation-for="MiniaturkaFile" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Opis" class="form-label fw-bold"></label>
                            <textarea asp-for="Opis" class="form-control" rows="5" placeholder="Opisz przebieg realizacji..."></textarea>
                            <span asp-validation-for="Opis" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="GaleriaFiles" class="form-label fw-bold"></label>
                            <input asp-for="GaleriaFiles" type="file" class="form-control" multiple accept="image/*" />
                            <div class="form-text text-muted">Możesz zaznaczyć wiele zdjęć jednocześnie używając klawisza Ctrl/Command.</div>
                            <span asp-validation-for="GaleriaFiles" class="text-danger"></span>
                        </div>

                        <hr class="my-4" />

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">Anuluj</a>
                            <button type="submit" class="btn btn-success px-5 fw-bold shadow-sm">
                                Opublikuj realizację
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}